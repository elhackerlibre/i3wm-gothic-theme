! Fuentes:
xterm*faceName: Dejavu Sans Mono Book
xterm*faceSize:	8
URxvt*font:     xft:Terminus:size=8

! Configuración local
XTerm*locale: 	true

! Shell entrada por defecto...
XTerm*loginshell: true

! Enable bell urgent
xterm*bellIsUrgent: true

! scrollback...
XTerm* savelines: 10000

! Doble click selección de URL...
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Geometra de ventana...
xterm*geometry: 80x20


! special
xterm*foreground:   #777777
xterm*background:   #111313
xterm*cursorColor:  #432f43

! black
xterm*color0:       #000000
xterm*color8:       #0d0d0d

! red
xterm*color1:       #615161
xterm*color9:       #181818

! green
xterm*color2:       #222222
xterm*color10:      #432f43

! yellow
xterm*color3:       #333333
xterm*color11:      #584358

! blue
xterm*color4:       #444444
xterm*color12:      #615161

! magenta
xterm*color5:       #432f43
xterm*color13:      #595959

! cyan
xterm*color6:       #584358
xterm*color14:      #707070

! white
xterm*color7:       #615161
xterm*color15:      #818181
